{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "jsx": "preserve",
        "strict": true,
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "types": ["node"],
        "paths": {
            "lib/*": ["lib/*"],
            "app/*": ["app/*"],
        },
        "baseUrl": ".",
        "outDir": "./build"
    },
    "include": ["**/*.ts", "**/*.tsx", "eslint.config.mjs"],
    "exclude": ["*.config.ts"],
}