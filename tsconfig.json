{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "jsx": "preserve",
        "strict": true,
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "types": ["node"],
        "paths": {
            "lib": ["lib/*"],
            "render": ["render/*"],
        },
        "baseUrl": ".",
        "outDir": "./build"
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": [
        "*.config.ts",
    ]
}