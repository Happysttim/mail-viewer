{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "jsx": "preserve",
        "strict": true,
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "types": ["node"],
        "baseUrl": ".",
        "typeRoots": ["./node_modules/@types"],
        "paths": {
            "lib/*": ["lib/*"],
            "app/*": ["app/*"],
        },
        "outDir": "./build"
    },
    "include": ["lib", "app", "*.ts"],
    "exclude": ["*.config.ts"],
}